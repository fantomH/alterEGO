  export lgit="/usr/local/alterEGO"
  alias updateROOT='sudo -u root sh -c "cd $lgit && git pull"'
  alias vinotes="vim ~/repositories/droidnotes/droidnotes.html"

## [ LOADED ]

  function loaded_extrarc() {
    printf "${COLOR_GREEN}[+]${COLOR_RESET} ${COLOR_BOLD}.extrarc loaded @ $(date | sed 's/  / /g')...${COLOR_RESET}\n"
  }
  # loaded_extrarc

## [ RELOAD ]

  function reload_extrarc() {
    source "${HOME}/.alterEGO/.extrarc"
    loaded_extrarc
  }

