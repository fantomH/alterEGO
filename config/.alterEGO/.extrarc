  export lgit="/usr/local/alterEGO"
  alias updateROOT='sudo -u root sh -c "cd $lgit && git pull"'
  alias vinotes="vim ~/repositories/droidnotes/droidnotes.html"

## [ LOADED ] -------------------------------------------------------------- ##

  function loadedExtrarc() {
    printf '%b\n' "${COLOR_GREEN}[+]${COLOR_RESET} ${COLOR_BOLD}.extrarc loaded @ $(date | sed 's/  / /g')...${COLOR_RESET}"
  }
  # loadedExtrarc

## [ RELOAD ] -------------------------------------------------------------- ##

  function reloadExtrarc() {
    source "${HOME}/.alterEGO/.extrarc"
    loadedExtrarc
  }

